terraform {
  cloud {
    organization = "sabotage-ivet"
    workspaces {
      name = "jenkins"
    }
  }


  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.16"
    }
  }

  required_version = ">= 1.2.0"
}

provider "aws" {
  region  = "us-west-2"
}

resource "aws_instance" "jenkins" {
  ami           = "ami-08d70e59c07c61a3a"
  instance_type = "t2.micro"

  tags = {
    Name = var.instance_name
    Purpose = var.purpose
    created_at = timestamp()
  }
}